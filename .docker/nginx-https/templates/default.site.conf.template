server {
    listen       80  default_server;
    location / {
            return 301 https://$host$request_uri/;
        }
}


server {
    listen 443 ssl;
    ssl_certificate /etc/nginx/ssl/nginx.crt;
    ssl_certificate_key /etc/nginx/ssl/nginx.key;
    location / {
        proxy_pass http://nginx:80;
    }
}